# ==========================================
# EJEMPLO DE CONFIGURACIÓN - Acua
# Copia este archivo a .env y ajusta
# ==========================================

# BASE DE DATOS MYSQL
# ==========================================
# Formato: mysql://usuario:contraseña@host:puerto/nombre_bd

# Para XAMPP sin contraseña:
DATABASE_URL="mysql://root:@localhost:3306/acua_db"

# Para XAMPP con contraseña:
# DATABASE_URL="mysql://root:tu_contraseña@localhost:3306/acua_db"

# Para MySQL remoto:
# DATABASE_URL="mysql://usuario:contraseña@192.168.1.100:3306/acua_db"


# SERVIDOR
# ==========================================
PORT=3000
NODE_ENV=development


# CONFIGURACIÓN DE EMAIL (OPCIONAL)
# ==========================================
# Si quieres enviar facturas/reportes por email

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASS=tu_contraseña_app
SMTP_FROM=noreply@acua.com

# Para Gmail:
# 1. Activa autenticación de dos factores
# 2. Genera "App Password" en https://myaccount.google.com/apppasswords
# 3. Usa esa contraseña en SMTP_PASS


# API CONFIGURATION (OPCIONAL)
# ==========================================
API_URL=http://localhost:3000
API_TIMEOUT=30000


# FEATURES (OPCIONAL)
# ==========================================
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_INVOICE_PDF=true


# CONFIGURACIÓN DE TARIFICACIÓN
# ==========================================
# Estos valores se pueden cambiar en el dashboard

BASIC_TARIFF=25000
THRESHOLD=40
UNIT_PRICE=1500
